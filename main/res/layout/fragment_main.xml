<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_choreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_choreo"
        app:layout_constraintBottom_toTopOf="@id/button_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>
    <Button

        android:id="@+id/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_choreo"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>